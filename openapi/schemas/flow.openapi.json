            "$ref": "#/components/schemas/QueryFlowsEndpoint_ListOfQueryFlowsEndpoint_Output"
          },
          "totalPages": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "UpdateConfigEndpoint_Input": {
        "type": "object",
        "properties": {
          "criteria": {
            "$ref": "#/components/schemas/OptionOfstring"
          },
          "context": {
            "$ref": "#/components/schemas/OptionOfstring"
          },
          "startingElo": {
            "$ref": "#/components/schemas/OptionOfint"
          },
          "kFactor": {
            "$ref": "#/components/schemas/OptionOfint"
          },
          "scalingFactor": {
            "$ref": "#/components/schemas/OptionOfint"
          },
          "responsesRequired": {
