              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              }
            }
          },
          "401": {
            "description": "Unauthenticated"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateFlowEndpoint_Input": {
        "required": [
          "name",
          "criteria",
          "responsesRequired"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "criteria": {
            "type": "string"
          },
          "context": {
            "type": "string",
            "nullable": true
          },
          "startingElo": {
            "type": "integer",
            "format": "int32"
          },
          "kFactor": {
            "type": "integer",
            "format": "int32"
          },
          "scalingFactor": {
            "type": "integer",
            "format": "int32"
          },
          "responsesRequired": {
            "type": "integer",
            "format": "int32"
          },
          "featureFlags": {
            "oneOf": [
              {
                "nullable": true
              },
              {
                "$ref": "#/components/schemas/ListOfFeatureFlag"
              }
            ]
          }
        }
      },
      "CreateFlowEndpoint_Output": {
        "required": [
          "flowId"
        ],
        "type": "object",
        "properties": {
          "flowId": {
            "type": "string"
          }
        }
      },
      "CreateFlowItemEndpoint_Input": {
        "required": [
          "datasetId"
        ],
        "type": "object",
        "properties": {
          "datasetId": {
            "type": "string"
          }
        }
      },
      "CreateFlowItemEndpoint_Output": {
        "required": [
          "flowItemId"
        ],
        "type": "object",
        "properties": {
          "flowItemId": {
            "type": "string"
          }
        }
      },
      "FeatureFlag": {
        "required": [
          "key",
          "value"
        ],
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "FlowItemState": {
        "enum": [
          "Pending",
          "Running",
          "Completed",
          "Failed"
        ]
      },
      "GetFlowByIdEndpoint_Output": {
        "required": [
          "id",
          "name",
          "ownerId",
          "ownerMail",
          "createdAt"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "ownerId": {
            "type": "string",
            "format": "uuid"
          },
          "ownerMail": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "GetFlowItemByIdEndpoint_Output": {
        "required": [
          "id",
          "flowId",
          "datasetId",
          "state",
          "createdAt"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "flowId": {
            "type": "string"
          },
          "datasetId": {
            "type": "string"
          },
          "workflowId": {
            "type": "string",
            "nullable": true
          },
          "state": {
            "$ref": "#/components/schemas/FlowItemState"
          },
          "failureMessage": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "completedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "failedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "ListOfFeatureFlag": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/FeatureFlag"
        }
      },
      "OptionOfint": {
        "type": "integer",
        "format": "int32",
        "nullable": true
      },
      "OptionOfIReadOnlyListOfFeatureFlag": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/ListOfFeatureFlag"
          },
          {
            "nullable": true
          }
        ]
      },
      "OptionOfstring": {
        "type": "string",
        "nullable": true
      },
      "QueryFlowItemsEndpoint_ListOfQueryFlowItemsEndpoint_Output": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/QueryFlowItemsEndpoint_Output"
        }
      },
      "QueryFlowItemsEndpoint_Output": {
        "required": [
          "id",
          "datasetId",
          "state",
          "createdAt"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "datasetId": {
            "type": "string"
          },
          "workflowId": {
            "type": "string",
            "nullable": true
          },
          "state": {
            "$ref": "#/components/schemas/FlowItemState"
          },
          "failureMessage": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "completedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "failedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
